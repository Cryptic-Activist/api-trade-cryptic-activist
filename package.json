{
  "name": "api-trade-cryptic-activist",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "test": "cross-env NODE_ENV=development jest",
    "test:w": "jest --watch",
    "build": "tsup src",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "refresh": "rm -rf ./node_modules ./yarn.lock ./yarn-error.log && yarn install",
    "lint": "eslint --fix",
    "build:base-ca": "cd libraries/base-ca && npm i && npm run generate && npm run build",
    "build:cryptic-utils": "cd libraries/cryptic-utils && npm i && npm run build",
    "bootstrap": "npm run build:base-ca && npm run build:cryptic-utils"
  },
  "husky": {
    "hooks": {}
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "cross-env CI=true yarn test --bail --findRelatedTests --detectOpenHandles",
      "git add ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.17.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^14.18.63",
    "@types/nodemon": "^1.19.6",
    "@types/sanitize-html": "^1.27.2",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "commitizen": "^4.3.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^3.1.9",
    "prettier": "^2.8.8",
    "prisma": "^6.2.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.15.0",
    "tsup": "^6.7.0",
    "tsx": "^3.14.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "base-ca": "file:../base-ca",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cryptic-utils": "^1.1.1",
    "dotenv": "^8.6.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "sanitize-html": "^2.14.0",
    "slugify": "^1.6.6",
    "unique-names-generator": "^4.7.1",
    "uuid": "^8.3.2",
    "zod": "^3.24.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
